<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pencil"
        android:padding="10dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_margin="30dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/pencil"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/arrow"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_north_east_black_24dp"
        android:layout_margin="30dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/arrow"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/shape"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_crop_square_black_24dp"
        android:layout_margin="30dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/shape"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/color"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_north_east_black_24dp"
        android:layout_margin="30dp"/>










</androidx.constraintlayout.widget.ConstraintLayout>